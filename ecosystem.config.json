{
  "apps": [
    {
      "name": "tod-bot",
      "script": "./dist/src/index.js",
      "watch": true,
      "ignore_watch": [
        "logs",
        "node_modules",
        "data",
        ".git",
        "*.log",
        ".env"
      ],
      "instances": 1,
      "autorestart": true,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
