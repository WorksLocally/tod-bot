{
  "name": "tod-bot",
  "version": "0.1.0",
  "description": "Truth or Dare Discord bot",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "pnpm run build",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "deploy:commands": "tsx scripts/deploy-commands.ts",
    "import:questions": "tsx scripts/import-questions.ts",
    "postinstall": "npm rebuild better-sqlite3",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "engines": {
    "node": ">=20.10 <25",
    "pnpm": ">=10.19.0"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.9.1",
    "better-sqlite3": "^12.4.1",
    "discord.js": "14.23.2",
    "dotenv": "^16.4.5",
    "node-cron": "^4.2.1",
    "typescript": "^5.9.3",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "tsx": "^4.20.6"
  }
}
